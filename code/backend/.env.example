# Environment variables template
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://riskoptimizer:password@localhost:5432/riskoptimizer
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_V1_PREFIX=/api/v1

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# External APIs
MARKET_DATA_API_KEY=your-market-data-api-key
MARKET_DATA_BASE_URL=https://api.marketdata.com

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
PROMETHEUS_METRICS_ENABLED=true

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@riskoptimizer.com

# Celery Configuration
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=3600  # 1 hour
CELERY_TASK_SOFT_TIME_LIMIT=3300  # 55 minutes
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# Cache Settings
CACHE_TTL_DEFAULT=3600  # 1 hour
CACHE_TTL_PORTFOLIO_DATA=1800  # 30 minutes
CACHE_TTL_MARKET_DATA=300  # 5 minutes

# Performance Settings
MAX_MONTE_CARLO_SIMULATIONS=100000
MAX_OPTIMIZATION_ITERATIONS=10000
DEFAULT_MONTE_CARLO_SIMULATIONS=10000
DEFAULT_TIME_HORIZON_DAYS=252
